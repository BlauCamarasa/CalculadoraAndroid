<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_tan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Tan()"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_cos"
        app:layout_constraintEnd_toEndOf="@+id/button_division"
        app:layout_constraintTop_toTopOf="@+id/button_cos"
        android:onClick="onClick" />

    <Button
        android:id="@+id/button_cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Cos()"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_sin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0"
        android:onClick="onClick" />

    <Button
        android:id="@+id/button_substraction"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="-"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_multiply"
        app:layout_constraintEnd_toEndOf="@+id/button_plus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_plus" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="5"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_6"
        app:layout_constraintEnd_toEndOf="@+id/button_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_2"
        app:layout_constraintTop_toTopOf="@+id/button_6"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="6"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_substraction"
        app:layout_constraintEnd_toEndOf="@+id/button_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_3"
        app:layout_constraintTop_toTopOf="@+id/button_substraction"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="4"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_5"
        app:layout_constraintEnd_toEndOf="@+id/button_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_1"
        app:layout_constraintTop_toTopOf="@+id/button_5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_point"
        app:layout_constraintEnd_toEndOf="@+id/button_7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_7"
        app:layout_constraintTop_toTopOf="@+id/button_point" />

    <Button
        android:id="@+id/button_division"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="%"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_multiply"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_multiply"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_point"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="."
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_equals"
        app:layout_constraintEnd_toEndOf="@+id/button_8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_8"
        app:layout_constraintTop_toTopOf="@+id/button_equals"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="="
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_division"
        app:layout_constraintEnd_toEndOf="@+id/button_9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_9"
        app:layout_constraintTop_toTopOf="@+id/button_division" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="+"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_3"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/button_3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="2"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_1"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintTop_toTopOf="@+id/button_1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="X"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_division"
        app:layout_constraintEnd_toEndOf="@+id/button_substraction"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_substraction" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="9"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_multiply"
        app:layout_constraintEnd_toEndOf="@+id/button_6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_6"
        app:layout_constraintTop_toTopOf="@+id/button_multiply"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="8"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_9"
        app:layout_constraintEnd_toEndOf="@+id/button_5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_5"
        app:layout_constraintTop_toTopOf="@+id/button_9"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="7"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_8"
        app:layout_constraintEnd_toEndOf="@+id/button_4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_4"
        app:layout_constraintTop_toTopOf="@+id/button_8"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button_4"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="3"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_2"
        app:layout_constraintEnd_toStartOf="@+id/button_plus"
        app:layout_constraintTop_toTopOf="@+id/button_2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="323dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/bottom_bar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/black"
        android:onClick="onClick"
        android:text="CLEAR"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.837"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Switch
        android:id="@+id/switch_rad"
        android:layout_width="147dp"
        android:layout_height="70dp"
        android:text="Radianes"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_sin"
        app:layout_constraintEnd_toEndOf="@+id/button_0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_0"
        app:layout_constraintTop_toBottomOf="@+id/button_0"
        app:layout_constraintVertical_bias="0.633"
        android:onClick="onClick" />

    <Button
        android:id="@+id/button_sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:backgroundTint="@color/black"
        android:text="Sin()"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_cos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/switch_rad"
        android:onClick="onClick" />

</androidx.constraintlayout.widget.ConstraintLayout>